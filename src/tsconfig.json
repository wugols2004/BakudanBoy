{
    "compilerOptions": {
        "sourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "module": "amd",
        "declaration": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}